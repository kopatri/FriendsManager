<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_background"
    android:orientation="vertical"
    tools:context="com.abertay.friendsmanager.LoginActivity"
    android:id="@+id/loginLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/friendsmanager_logo"
        android:background="@drawable/logo_land"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/secretWord"
        android:background="@drawable/oval_style"
        android:gravity="center"
        android:maxLength="20"
        android:singleLine="true"
        android:hint="@string/username"
        android:id="@+id/username" />

    <EditText
        android:id="@+id/secretWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/oval_style"
        android:gravity="center"
        android:maxLength="20"
        android:singleLine="true"
        android:hint="@string/password"
        android:inputType="textPassword" />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="30dp"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:background="@drawable/oval_style"
       android:text="@string/login"
       android:id="@+id/login" />

</RelativeLayout>
